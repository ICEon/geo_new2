<?xml version="1.0" encoding="UTF-8"?>  

 <widget xmlns   = "http://www.w3.org/ns/widgets"  
     xmlns:gap = "http://phonegap.com/ns/1.0"  
     id    = "com.cbtis16.geonew2"  
     version  = "1.0.0">  
	 
   <name>Geo New 2</name>  
   
   <description>  
Ejemplo geolocalizacion
   </description>  
   
   <author href="https://build.phonegap.com" email="micorreo@gmail.com">  
None
   </author>  
   <allow-intent href="https://*/*"/>
   <acces origin="https://*/*"/>
   
   <!-- Personaliza la aplicacion y plataforma  -->  
   <preference name="orientation"        value="portrait" />    
   <preference name="target-device"       value="universal" />   
   <preference name="fullscreen"         value="true" />      
   <preference name="android-installLocation"  value="auto" />  
   <preference name="permissions" value="INTERNET" />



   <!-- Plugins -->  
   <!-- Core plugins -->  
<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
<plugin name="cordova-plugin-device-motion" spec="~1.2.5" />
<plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />

   <!-- Third party plugins -->  
   
   <!-- A list of available plugins are available at https://build.phonegap.com/plugins -->  

   <plugin name ="cordova-plugin-geolocation" source="npm"/>

   
<!--  <plugin name="cordova-plugin-sqlite-2" source="npm" />-->

   
   <!-- Define app icon for each platform. -->  
   <icon src="icon.png" />  
   <icon src="res/icon/android/icon-36-ldpi.png"  gap:platform="android"  gap:qualifier="ldpi" />  
   <icon src="res/icon/android/icon-48-mdpi.png"  gap:platform="android"  gap:qualifier="mdpi" />  
   <icon src="res/icon/android/icon-72-hdpi.png"  gap:platform="android"  gap:qualifier="hdpi" />  
   <icon src="res/icon/android/icon-96-xhdpi.png" gap:platform="android"  gap:qualifier="xhdpi" />  

   <!-- Define app splash screen for each platform. -->  
   <gap:splash src="splash.png" />
   <gap:splash src="res/screen/android/screen-ldpi-portrait.png"    gap:platform="android" gap:qualifier="port-ldpi" />  
   <gap:splash src="res/screen/android/screen-mdpi-portrait.png"    gap:platform="android" gap:qualifier="port-mdpi" />  
   <gap:splash src="res/screen/android/screen-hdpi-portrait.png"    gap:platform="android" gap:qualifier="port-hdpi" />  
   <gap:splash src="res/screen/android/screen-xhdpi-portrait.png"   gap:platform="android" gap:qualifier="port-xhdpi" />  

   
 </widget>